
properties([disableConcurrentBuilds()])

pipeline {
    agent any

    triggers {
        pollSCM('H * * * *')
    }

    stages {
        stage("Checkout") {
            steps {
                git branch: 'profileJdbc', changelog: true, poll: true, url:
                'https://github.com/Sergey113222/Cinema-Base-Gradle.git'
            }
        }
        stage("Build & Tests") {
            steps {
                script {
                       bat 'gradlew sonarqube ' //run a gradle task
                }
            }
        }
    }
}